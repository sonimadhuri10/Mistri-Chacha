<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Sign Up"
            android:gravity="center"
            style="@style/Header_style"
            android:layout_height="wrap_content">
        </TextView>

        <View
            android:layout_marginTop="1dp"
            android:layout_width="50dp"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:hint="Full Name"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>

            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Mobile No"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>

            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:hint="Email"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>


            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/etpassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:hint="Password"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>


            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/etConfirmpassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/etCountry"
                    android:layout_width="0dp"
                    android:text="India"
                    android:layout_marginRight="1dp"
                    android:hint="Country"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

                <EditText
                    android:id="@+id/etState"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="State"
                    android:text="M.P."
                    android:layout_marginLeft="1dp"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <EditText
                    android:layout_weight="1"
                    android:id="@+id/etCity"
                    android:layout_width="0dp"
                    android:layout_marginRight="1dp"
                    android:hint="City"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

                <EditText
                    android:id="@+id/etZip"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="Zipcode"
                    android:inputType="number"
                    android:layout_marginLeft="1dp"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

            </LinearLayout>

            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:hint="Address"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>



            <Button
                android:id="@+id/btnSignup"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                style="@style/button_text_style"
                android:text="SIGN UP"
                android:background="@drawable/button_background"
                android:layout_height="30dp">

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="20dp"
                    android:background="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_height="0.5dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="OR"
                    style="@style/text_style"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">

                </TextView>

                <View
                    android:layout_width="20dp"
                    android:background="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_height="0.5dp">

                </View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGoogleSignup"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/yellow_border_background"
                android:layout_height="30dp">

                <Button
                    android:id="@+id/btnGoogleSignin"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    style="@style/button_color_text_style"
                    android:text="SIGN UP WITH GOOGLE"
                    android:layout_height="30dp">
                </Button>

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/google"
                    android:layout_height="20dp">
                </ImageView>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/llLogin"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Already have an acoount ?"
                    style="@style/text_style"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Login"
                    style="@style/text_color_style"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>