<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F4F2F2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clipChildren="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/newbg"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:background="#000"
                                android:alpha="0.7"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                            </LinearLayout>

                        </FrameLayout>


                    </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="115dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

             <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/updateimage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pro"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    style="@style/light_text_style"
                    android:text="Name :"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:hint="Full Name"
                    style="@style/text_style"
                    android:padding="5dp"
                    android:background="@color/colorWhite"
                    android:layout_height="wrap_content">
                </EditText>


                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/light_text_style"
                    android:text="Mobile No :"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:layout_marginTop="3dp"
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:background="@color/colorWhite"
                    android:hint="Mobile No"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/light_text_style"
                    android:text="Email :"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:layout_marginTop="3dp"
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:hint="Email"
                    android:padding="5dp"
                    android:background="@color/colorWhite"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        style="@style/light_text_style"
                        android:text="Country :"
                        android:layout_height="match_parent">

                    </TextView>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        style="@style/light_text_style"
                        android:text="State :"
                        android:layout_height="match_parent">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/etCountry"
                        android:layout_width="0dp"
                        android:text="India"
                        android:padding="5dp"
                        android:layout_marginRight="1dp"
                        android:hint="Country"
                        android:background="@color/colorWhite"
                        style="@style/text_style"
                        android:layout_height="wrap_content">
                    </EditText>

                    <EditText
                        android:id="@+id/etState"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="State"
                        android:padding="5dp"
                        android:text="M.P."
                        android:background="@color/colorWhite"
                        android:layout_marginLeft="1dp"
                        style="@style/text_style"
                        android:layout_height="wrap_content">
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        style="@style/light_text_style"
                        android:text="City :"
                        android:layout_height="match_parent">

                    </TextView>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        style="@style/light_text_style"
                        android:text="Zipcode :"
                        android:layout_height="match_parent">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/etCity"
                        android:layout_width="0dp"
                        android:layout_marginRight="1dp"
                        android:hint="City"
                        android:padding="5dp"
                        android:background="@color/colorWhite"
                        style="@style/text_style"
                        android:layout_height="wrap_content">
                    </EditText>

                    <EditText
                        android:id="@+id/etZip"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="Zipcode"
                        android:inputType="number"
                        android:padding="5dp"
                        android:background="@color/colorWhite"
                        android:layout_marginLeft="1dp"
                        style="@style/text_style"
                        android:layout_height="wrap_content">
                    </EditText>

                </LinearLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                style="@style/light_text_style"
                android:text="Flat No :"
                android:layout_height="match_parent">

            </TextView>

            <EditText
                android:layout_marginTop="3dp"
                android:id="@+id/etFlatNo"
                android:layout_width="match_parent"
                android:hint="Flat No"
                android:padding="5dp"
                android:background="@color/colorWhite"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                style="@style/light_text_style"
                android:text="Building Name :"
                android:layout_height="match_parent">

            </TextView>

            <EditText
                android:layout_marginTop="3dp"
                android:id="@+id/etBuilding"
                android:layout_width="match_parent"
                android:hint="Building Name"
                android:padding="5dp"
                android:background="@color/colorWhite"
                style="@style/text_style"
                android:layout_height="wrap_content">
            </EditText>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    style="@style/light_text_style"
                    android:text="Address :"
                    android:layout_height="match_parent">

                </TextView>

                <EditText
                    android:layout_marginTop="3dp"
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:hint="Address"
                    android:padding="5dp"
                    android:background="@color/colorWhite"
                    style="@style/text_style"
                    android:layout_height="wrap_content">
                </EditText>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    style="@style/button_text_style"
                    android:text="Update Profile"
                    android:background="@drawable/button_background"
                    android:layout_height="30dp">

                </Button>



            </LinearLayout>

    </LinearLayout>

    </ScrollView>


</LinearLayout>