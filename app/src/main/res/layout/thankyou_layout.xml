<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/rrMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tvShopping"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:padding="12dp"
                android:gravity="center"
                style="@style/button_text_style"
                android:text="KEEP SHOPPING"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/footer"
            android:layout_below="@+id/header">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:text="ORDER SUCCESSFULLY DONE"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:text="Thank You , For shopping with us"
                        style="@style/text_style"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    </TextView>

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bike"
                        android:layout_height="250dp">
                    </ImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:elevation="10dp"
                        app:cardCornerRadius="5dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvOrderid"
                                    android:layout_width="match_parent"
                                    style="@style/text_style"
                                    android:textSize="16dp"
                                    android:layout_height="wrap_content">
                                </TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:layout_height="2dp">
                                </View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Total Item Count:"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="13dp"
                                            android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvTotalItem"
                                            android:layout_width="match_parent"
                                            android:text=""
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Total:"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="13dp"
                                            android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvTotal"
                                            android:layout_width="match_parent"
                                            android:text=""
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                    android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Coupan Discount:"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="13dp"
                                            android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvCoupanDiscount"
                                            android:layout_width="match_parent"
                                            android:text="0"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                    android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:layout_height="1dp">
                                </View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Shipping Cost:"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="13dp"                                                android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvShippingcost"
                                            android:layout_width="match_parent"
                                            android:text=""
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Packing Cost:"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="13dp"
                                            android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvPackingCost"
                                            android:layout_width="match_parent"
                                            android:text=""
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Tax:"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="13dp"
                                            android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvTax"
                                            android:layout_width="match_parent"
                                            android:text="0"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                    android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>

                                    </LinearLayout>



                                </LinearLayout>

                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:layout_height="1dp">
                                </View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="Final Price:"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"
                                            android:layout_height="wrap_content"></TextView>

                                        <TextView
                                            android:id="@+id/tvFinalPrice"
                                            android:layout_width="match_parent"
                                            android:text=""
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"                                                android:gravity="right"
                                            android:layout_height="wrap_content"></TextView>



                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:elevation="10dp"
                        app:cardCornerRadius="5dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    style="@style/text_style"
                                    android:text="Shipping Info"
                                    android:textSize="16dp"
                                    android:layout_height="wrap_content">
                                </TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:layout_height="2dp">
                                </View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:padding="10dp"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:src="@drawable/profile"
                                            android:layout_height="18dp"
                                            app:tint="@color/colorPrimary">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/tvName"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="10dp"
                                            style="@style/text_style"
                                            android:textColor="@color/colorPrimary"
                                            android:layout_height="wrap_content">

                                        </TextView>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="15dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:background="@drawable/smartphone"
                                            android:layout_height="18dp">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/tvMobile"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="10dp"
                                            style="@style/text_style"
                                            android:layout_height="wrap_content">

                                        </TextView>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="15dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:background="@drawable/email"
                                            android:layout_height="18dp">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/tvEmail"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="10dp"
                                            style="@style/text_style"
                                            android:layout_height="wrap_content">

                                        </TextView>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="15dp"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:background="@drawable/location"
                                            android:layout_height="18dp">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/tvAddress"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="10dp"
                                            style="@style/text_style"
                                            android:layout_height="wrap_content">

                                        </TextView>


                                    </LinearLayout>


                                </LinearLayout>







                            </LinearLayout>





                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:elevation="10dp"
                        app:cardCornerRadius="5dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvDetails"
                                android:layout_width="match_parent"
                                android:text="View Detail"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:padding="5dp"
                                style="@style/text_color_style"
                                android:layout_height="wrap_content">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
